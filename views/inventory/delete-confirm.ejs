<h1><%- title %></h1>
<%- messages() %>
<% if (errors) {%>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%=error.msg %></li>
  <% }) %>
</ul>
<% } %>
<form class="cse-motor-form" id="deleteForm" action="/inv/delete" method="post">
    <span>All fields are required*</span>
    <fieldset>
        <legend>Vehicle Information</legend>
        <p>Confirm Deletion - The delete is permanent.</p>
        <label class="form-label">Make*
            <input type="text" name="inv_make" minlength="3" placeholder="Min of 3 characters" value="<%= locals.inv_make %>" required readonly>
        </label>
        <label class="form-label">Model*
            <input type="text" name="inv_model" minlength="3" placeholder="Min of 3 characters" value="<%= locals.inv_model %>" required readonly>
        </label>
        <label class="form-label">Year*
            <input type="text" name="inv_year" pattern="^[0-9]{4}$" placeholder="4 digits year" value="<%= locals.inv_year %>" required readonly>
        </label>
        <label class="form-label">Price*
            <input type="text" name="inv_price" pattern="^[0-9]+(?:\.[0-9]+)?$" value="<%= locals.inv_price %>" required readonly>
        </label>
        <input type="submit" name="submitBtn" id="deleteBtn" value="Delete">
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) {%> value="<%= locals.inv_id %>"
         <%   } %> >
    </fieldset>
</form>

