<h1><%- title %></h1>
<%- messages() %>
<% if (errors) {%>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%=error.msg %></li>
  <% }) %>
</ul>
<% } %>
<form class="cse-motor-form" action="/inv/add-classification" method="post">
    <span>Field is required*</span>
    <fieldset>
        <span class="form-requirements">Name must be alphabetic only</span>
        <label class="form-label">Classification Name*
            <input type="text" name="classification_name" pattern="^[a-zA-Z]+$" value="<%= locals.classification_name %>" required>
        </label>
        <input type="submit" name="submitBtn" value="Add Classification">
    </fieldset>
</form>